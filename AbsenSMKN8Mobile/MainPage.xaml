<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AbsenSMKN8Mobile.MainPage">
    
    <ScrollView>
        <VerticalStackLayout
            Padding="30, 0"
            Spacing="25">
            <Image
                Source="logosmkn8.web"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="SMKN 8 LOGO" />

            <StackLayout>
                <Entry Placeholder="username" TextColor="Gray" PlaceholderColor="Wheat"></Entry>
                <Entry Placeholder="pasword" IsPassword="True" TextColor="Gray" PlaceholderColor="DarkBlue"></Entry>
            </StackLayout>

       

            <Button                             
                x:Name="CounterBtn"
                Text="Login" 
                SemanticProperties.Hint="Go to the next absent page"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
